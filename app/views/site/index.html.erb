<div class="block small left withsidebar">
	<div class="block_head">
		<div class="bheadl"></div>
		<div class="bheadr"></div>
	
		<h2>Applications</h2>
	</div>		<!-- .block_head ends -->

	<div class="block_content">
	  <div class="sidebar">
			<ul class="sidemenu">
				<li><a href="#sb1">Favorites</a></li>
				<li><a href="#sb2">Departmental</a></li>
				<li><a href="#sb3">Divisional</a></li>
				<li><a href="#sb4">Universal</a></li>
			</ul>
			
			<p><strong>There may be more apps available!</strong> Be sure to check all of the above tabs. You may request permission to additional apps via the [Request] links.</p>
		</div>		<!-- .sidebar ends -->
		
		<div class="sidebar_content" id="sb1">
  		<h2>Available</h2>
  		<ul>
  		  <li><a href="https://my.dss.ucdavis.edu/roles">Manage Profile</a></li>
  		  <% current_user.apps.each do |app| %>
  			  <li><%= link_to app.display_name, app.url %></li>
  			<% end %>
  		</ul>

  		<h2>Unavailable</h2>
  		<ul>
  		  <% if current_user.known_attributes.include? "requestable_apps" %>
  			  <% current_user.requestable_apps.each do |app| %>
  				  <li><%= link_to app.display_name, app.url %> <small><a href="#">[Request]</a></small></li>
  			  <% end %>
  			<% else %>
  			  <li>None</li>
  			<% end %>
  		</ul>
  	</div> <!-- sidebar_content ends -->

	</div>		<!-- .block_content ends -->

	<div class="bendl"></div>
	<div class="bendr"></div>
</div>		<!-- .block ends -->



